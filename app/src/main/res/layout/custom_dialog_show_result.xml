<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/custom_dialog_add_class">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_head_dialog_add_class"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Kết quả"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start|center_vertical"
                android:text="Số câu đúng:"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_NumberCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/red"
                android:textSize="23sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="start|center_vertical"
            android:text="Điểm số:"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red"
            android:textSize="23sp"/>
    </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ConfirmSetTimeCountdown"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button_add_new_quiz"
            android:gravity="center"
            android:text="Điểm danh"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>


</FrameLayout>