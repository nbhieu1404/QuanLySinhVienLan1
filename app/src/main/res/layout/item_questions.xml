<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_background_item_profile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:background="@drawable/custom_top_layout_question"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/txt_NumberQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="Câu hỏi 1"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="1dp"
            android:background="@drawable/custom_button_question_management"
            android:drawableStart="@drawable/ic_black_pencil"
            android:paddingHorizontal="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:background="@drawable/custom_button_question_management"
            android:drawableStart="@drawable/ic_delete"
            android:paddingHorizontal="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_NameQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Nội dung câu hỏi"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:background="@color/gray" />

    <RadioGroup
        android:id="@+id/rdg_RadioShowAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/rdb_A1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:text="Đáp án 1" />

        <RadioButton
            android:id="@+id/rdb_A2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="@color/black"
            android:focusable="false"
            android:paddingStart="10dp"
            android:text="Đáp án 2" />

        <RadioButton
            android:id="@+id/rdb_A3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:text="Đáp án 3" />

        <RadioButton
            android:id="@+id/rdb_A4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:text="Đáp án 4" />

    </RadioGroup>
</LinearLayout>
