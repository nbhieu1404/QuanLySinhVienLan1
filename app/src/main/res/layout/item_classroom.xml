<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/custom_background_item_profile"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/view_avatarTeacher"
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_avatar"
        app:riv_corner_radius="150dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="2dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/txt_NameClassroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/txt_NameTeacherClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_MembersQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:paddingEnd="20dp"/>
</LinearLayout>